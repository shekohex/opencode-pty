{
  "name": "pty-skill",
  "module": "index.ts",
  "version": "0.2.0",
  "description": "Interactive PTY management skill for AI agents - run background processes, send input, read output with regex filtering. Works with Claude Code, Codex CLI, and other AI tools.",
  "author": "shekohex",
  "keywords": [
    "pty",
    "pseudo-terminal",
    "terminal",
    "background-process",
    "interactive",
    "cli",
    "shell",
    "dev-server",
    "bun",
    "ai-agent",
    "claude-code",
    "codex-cli",
    "skill",
    "opencode",
    "opencode-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shekohex/opencode-pty.git"
  },
  "bugs": {
    "url": "https://github.com/shekohex/opencode-pty/issues"
  },
  "homepage": "https://github.com/shekohex/opencode-pty#readme",
  "bin": {
    "pty-skill": "./cli/bin/pty-skill.ts"
  },
  "files": [
    "index.ts",
    "src",
    "cli",
    "SKILL.md",
    "dist"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "build": "bun run build-cli.ts",
    "build:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 cli/bin/pty-skill.ts --outfile dist/pty-skill-darwin-arm64",
    "build:darwin-x64": "bun build --compile --target=bun-darwin-x64 cli/bin/pty-skill.ts --outfile dist/pty-skill-darwin-x64",
    "build:linux-x64": "bun build --compile --target=bun-linux-x64 cli/bin/pty-skill.ts --outfile dist/pty-skill-linux-x64"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.0.146",
    "@opencode-ai/sdk": "^1.0.146",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "bun-pty": "^0.4.2"
  }
}
